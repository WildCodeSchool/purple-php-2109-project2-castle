{% extends 'layout.html.twig' %}

{% block title %} Terms Of Service {{parent()}}{% endblock %}
{% block stylesheet %}
<link rel="stylesheet" href="../assets/css/tutorialAndTOS.css" <meta name="viewport"
    content="width=device-width, initial-scale=1.0" />
{% endblock %}

{% block content %}
{# Div using grid with background sky, return button, logo and another button (non displayed) #}
<nav class="sky">
    <div class="returnbutton">
        <a href="/"><img id="returnbutton" src="/assets/images/mobile/return_icon.png" alt="return to home"></a>
    </div>
    <div class="logo">
        <img id="logo" src="/assets/images/mobile/logo.png" alt="logo Defend the Castle">
    </div>
    <div class="otherbutton">
    </div>
</nav>
{# Div which only displays the castle #}
<picture class="castle">
    <source id="castle" media="(max-width:650px)" srcset="/assets/images/mobile/troop_choice_castle.png">
    <img id="castle" src="/assets/images/desktop/desktop_castle_troop_choice.png" alt="Castle">
</picture>
{# Div with background grass and bloc titles and text #}
<section class="grass">
    <div class="title">
        <h1>REGISTRATION</h1>
    </div>
    <div class="container">
        <hr>
        <h2>What kind of king are you??</h2>
        <hr>
        <form class="tos-text" action="admin/pass" method="post">
            <div class="form">
                <label for="password">Please give me a password for our spies:</label>
                <input type="password" id="password" name="password" required minlength="8">
            </div>
            <input type="submit" class="submit" value="Go Messenger!">
        </form>
    </div>
</section>
{% endblock %}